<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkerBlue</item>
        <item name="colorPrimaryDark">@color/colorBrightBlue</item>
        <item name="colorAccent">@color/colorOlive</item>
    </style>

    <style name="buttonstyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:text">@string/game</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPink</item>
    </style>

    <style name="buttonstyle2" parent="buttonstyle1">
        <item name="android:text">@string/gammon</item>
        <item name="android:background">@color/colorLightPink</item>
    </style>

    <style name="buttonstyle3" parent="buttonstyle1">
        <item name="android:text">@string/bgammon</item>
        <item name="android:background">@color/colorBrightBlue</item>
    </style>

    <style name="buttonstyle4" parent="buttonstyle1">
        <item name="android:text">@string/reset</item>
        <item name="android:layout_below">@id/all_scores</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorOlive</item>
    </style>

    <style name="score_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">70sp</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="edit_text_st">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="bckg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/bckg</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="parent_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="child_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorTransparentBlack</item>
    </style>

    <style name="dice_style">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_below">@id/reset</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
